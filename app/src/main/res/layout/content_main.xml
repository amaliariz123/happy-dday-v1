<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/app_bar_main">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:layout_centerInParent="true">

        <Button
            android:id="@+id/previousBtn"
            android:text="+"
            android:textColor="@android:color/white"
            android:background="@android:color/darker_gray"
            android:textSize="17sp"
            android:textAllCaps="false"
            android:layout_marginTop="10dp"
            android:layout_width="40dp"
            android:layout_marginLeft="20dp"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="10dp"
            android:layout_height="40dp" />

        <Button
            android:id="@+id/nextBtn"
            android:text="+"
            android:textColor="@android:color/white"
            android:background="@android:color/darker_gray"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_width="40dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:layout_height="40dp" />

        <ImageView
            android:id="@+id/angka"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:background="@drawable/kue" />

        <ImageView
            android:id="@+id/left_candle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="130dp"
            android:layout_marginStart="130dp"
            android:layout_marginTop="80dp"
            android:src="@drawable/dua"/>

        <ImageView
            android:id="@+id/right_candle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="130dp"
            android:layout_marginEnd="130dp"
            android:layout_marginTop="80dp"
            android:src="@drawable/dua"/>

        <ImageView
            android:id="@+id/imageView_candle_flame"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:keepScreenOn="true"
            android:paddingLeft="15dp"
            android:src="@drawable/candle_11" />

        <ImageView
            android:id="@+id/imageView_candle_smoke"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:paddingLeft="15dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:keepScreenOn="true"
            android:src="@drawable/smoke" />

    </RelativeLayout>
</RelativeLayout>